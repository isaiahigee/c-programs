#include <iostream>  
using namespace std;  
int main()  
{  
  int n, i, m=0, flag=0;  
  cout << "Enter the Number to check Prime: ";  
  cin >> n;  
  m=n/2;  
  for(i = 2; i <= m; i++)  
  {  
      if (flag==0)  
      cout << "Number is Prime"<<endl; 
  }
  if(n%i<=0)
  {
  	cout<<"number is invalid."<<endl;
  	flag=1;
  }
  return 0;  
}
